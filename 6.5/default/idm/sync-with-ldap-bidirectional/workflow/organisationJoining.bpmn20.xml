  <process id="de.dihk.sso.organisation.OrganisationJoiningWorkflow" name="OrganisationJoining" isExecutable="true">
    <startEvent id="startevent1" name="Start"></startEvent>
    <userTask id="approveUser" name="Approve User" activiti:candidateGroups="${organisationAdminGroup}">
      <extensionElements>
        <activiti:formProperty id="userJoinApproved" name="Approved?" type="boolean" required="true"></activiti:formProperty>
        <activiti:taskListener event="complete" expression="${execution.setVariable('userJoinApproved', userJoinApproved)}"></activiti:taskListener>
        <activiti:taskListener event="complete" expression="${execution.setVariable('userDenyReason', userDenyReason)}"></activiti:taskListener>
      </extensionElements>
    </userTask>
    <sequenceFlow id="flow10" sourceRef="startevent1" targetRef="approveUser"></sequenceFlow>
    <exclusiveGateway id="exclusivegateway3" name="Exclusive Gateway"></exclusiveGateway>
    <sequenceFlow id="flow11" sourceRef="approveUser" targetRef="exclusivegateway3"></sequenceFlow>
    <endEvent id="endevent1" name="End"></endEvent>
    <sequenceFlow id="flow12" sourceRef="exclusivegateway3" targetRef="mailtaskOrgaJoin">
      <conditionExpression xsi:type="tFormalExpression"><![CDATA[${userJoinApproved == false}]]></conditionExpression>
    </sequenceFlow>
    <scriptTask id="scripttask1" name="Join User" scriptFormat="groovy" activiti:autoStoreVariables="false">
      <script>import org.slf4j.Logger
import org.slf4j.LoggerFactory
import com.fasterxml.jackson.databind.ObjectMapper

final Logger logger = LoggerFactory.getLogger("organisation.joining.approve")
logger.info("Joining user {} with organisation: {}", user._id, organisation._id)

openidm.patch(organisation._ref, null, new ObjectMapper().readValue("[{\"operation\":\"add\", \"field\":\"/member/-\", \"value\": {\"_ref\":\"" + user._ref + "\"} }]", List.class))

logger.info("Successfully joined user {} to organisation: {}", user, organisation)</script>
    </scriptTask>
    <sequenceFlow id="flow13" sourceRef="exclusivegateway3" targetRef="scripttask1">
      <conditionExpression xsi:type="tFormalExpression"><![CDATA[${userJoinApproved == true}]]></conditionExpression>
    </sequenceFlow>
    <sequenceFlow id="flow14" sourceRef="scripttask1" targetRef="exclusivegateway4"></sequenceFlow>
    <exclusiveGateway id="exclusivegateway4" name="Exclusive Gateway"></exclusiveGateway>
    <sequenceFlow id="flow15" sourceRef="exclusivegateway4" targetRef="endevent1"></sequenceFlow>
    <serviceTask id="mailtaskOrgaJoin" name="Mail Task" activiti:type="mail">
      <extensionElements>
        <activiti:field name="to">
          <activiti:string><![CDATA[test@test.de]]></activiti:string>
        </activiti:field>
        <activiti:field name="from">
          <activiti:string><![CDATA[admin@idm.dihk.de]]></activiti:string>
        </activiti:field>
        <activiti:field name="subject">
          <activiti:string><![CDATA[Beitrittsanfrage abgelehnt]]></activiti:string>
        </activiti:field>
        <activiti:field name="charset">
          <activiti:string><![CDATA[UTF-8]]></activiti:string>
        </activiti:field>
        <activiti:field name="html">
          <activiti:expression><![CDATA[<html>
	<body>Ihre Beitrittsanfrage an ${organisation.corporateName} wurde mit folgendem Grund abgelehnt<br/><br/>
	${userDenyReason}	
	<br/>
	<br/>
	Bitte wenden Sie sich an den Organisationadministrator.
	</body>
</html>]]></activiti:expression>
        </activiti:field>
      </extensionElements>
    </serviceTask>
    <sequenceFlow id="flow16" sourceRef="mailtaskOrgaJoin" targetRef="exclusivegateway4"></sequenceFlow>
  </process>
