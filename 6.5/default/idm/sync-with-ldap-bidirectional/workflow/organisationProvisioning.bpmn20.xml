  <process id="de.dihk.sso.organisation.OrganisationProvisioningWorkflow" name="Organisationprovisioning" isExecutable="true">
    <endEvent id="end" name="End"></endEvent>
    <startEvent id="start" name="Start"></startEvent>
    <scriptTask id="createOrganisation" name="Create Organisation" scriptFormat="groovy" activiti:autoStoreVariables="false">
      <script>import org.slf4j.Logger
import org.slf4j.LoggerFactory
import com.fasterxml.jackson.databind.ObjectMapper

final Logger logger = LoggerFactory.getLogger("organisation.provisioning.create")

logger.info("Create given organisation: {}", organisation)

openidm.create('managed/organisation', null, new ObjectMapper().convertValue(organisation, Map.class))

logger.info("Successfully created organisation: {}", organisation)   </script>
    </scriptTask>
    <sequenceFlow id="flow1" sourceRef="start" targetRef="approveOrganisation"></sequenceFlow>
    <userTask id="approveOrganisation" name="Approve Organisation" activiti:candidateGroups="dihkidm_sachbearbeiter">
      <extensionElements>
        <activiti:formProperty id="organisationApproved" name="Approved?" type="boolean" required="true"></activiti:formProperty>
        <activiti:taskListener event="complete" expression="${execution.setVariable('organisationApproved', organisationApproved)}"></activiti:taskListener>
      </extensionElements>
    </userTask>
    <exclusiveGateway id="exclusivegateway1" name="Exclusive Gateway"></exclusiveGateway>
    <sequenceFlow id="flow3" sourceRef="approveOrganisation" targetRef="exclusivegateway1"></sequenceFlow>
    <sequenceFlow id="approved" name="approved" sourceRef="exclusivegateway1" targetRef="createOrganisationPassword">
      <conditionExpression xsi:type="tFormalExpression"><![CDATA[${organisationApproved == true}]]></conditionExpression>
    </sequenceFlow>
    <exclusiveGateway id="exclusivegateway2" name="Exclusive Gateway"></exclusiveGateway>
    <sequenceFlow id="flow6" sourceRef="exclusivegateway2" targetRef="end"></sequenceFlow>
    <sequenceFlow id="notApproved" name="not approved" sourceRef="exclusivegateway1" targetRef="exclusivegateway2">
      <conditionExpression xsi:type="tFormalExpression"><![CDATA[${organisationApproved == false}]]></conditionExpression>
    </sequenceFlow>
    <serviceTask id="createOrganisationPassword" name="Create Organisation Password" activiti:class="de.dihk.sso.wfl.impl.organisation.OrganisationPasswordCreateService"></serviceTask>
    <sequenceFlow id="flow7" sourceRef="createOrganisationPassword" targetRef="createOrganisation"></sequenceFlow>
    <sequenceFlow id="flow8" sourceRef="createOrganisation" targetRef="mailtaskOrgaProv"></sequenceFlow>
    <serviceTask id="mailtaskOrgaProv" name="Mail Task" activiti:type="mail">
      <extensionElements>
        <activiti:field name="html">
          <activiti:expression><![CDATA[<html>
                <body>Vielen Dank für Ihre Anfrage zur Registrierung der ${organisation.corporateName}!<br/>
                  Die Registrierung der ${organisation.corporateName} ist erfolgreich abgeschlossen. Ihr zuständiger IDM Sachbearbeiter generiert für Sie ein Passwort, mit dem Sie die Aktivierung Ihrer<br/>
                  Organisation vornehmen können. Dieses Passwort wird per Brief an die Geschäftsführung Ihrer Organisation versandt.<br/>
                  Ident-Nummer: ${organisation.identNumber}<br/>
                  Kammernummer: ${organisation.ihk}<br/>
                  Für eventuelle Rückfragen steht Ihnen der zuständige IDM Sachbearbeiter <a href = "mailto:${supportMailadress}">${supportMailadress}</a> zur Verfügung.<br/>
                  Vielen Dank
                </body>
              </html>]]></activiti:expression>
        </activiti:field>
        <activiti:field name="to">
          <activiti:expression><![CDATA[${organisation.applicant.email}]]></activiti:expression>
        </activiti:field>
        <activiti:field name="from">
          <activiti:expression><![CDATA[${supportMailadress}]]></activiti:expression>
        </activiti:field>
        <activiti:field name="subject">
          <activiti:string><![CDATA[Ihre Registrierung bei der IHK]]></activiti:string>
        </activiti:field>
        <activiti:field name="charset">
          <activiti:string><![CDATA[UTF-8]]></activiti:string>
        </activiti:field>
      </extensionElements>
    </serviceTask>
    <sequenceFlow id="flow9" sourceRef="mailtaskOrgaProv" targetRef="exclusivegateway2"></sequenceFlow>
  </process>
